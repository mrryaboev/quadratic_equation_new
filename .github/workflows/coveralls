name: Python CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: Set up Python 3.11
      uses: actions/setup-python@v3
      with:
        python-version: "3.11"
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pytest pytest-cov coverage
    - name: Lint with flake8
      run: |
        pip install flake8
        # stop the build if there are Python syntax errors or undefined names
        flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
        # exit-zero treats all errors as warnings. The GitHub editor is 127 chars wide
        flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics
    - name: Test with pytest
      run: |
        pytest --cov=quadratic_solver --cov-report term-missing --cov-report xml
    - name: Upload coverage to Coveralls
      uses: actions/upload-artifact@v3  # Add this step to upload the coverage report
      with:
          name: coverage-report
          path: .
          retention-days: 10 # optional: number of days to retain the artifact.  Defaults to 90
    - name: Coveralls
      uses: coverallsapp/github-action@v1 # Use Coveralls action after running the tests
      with:
        github-token: ${{ secrets.GITHUB_TOKEN }}
